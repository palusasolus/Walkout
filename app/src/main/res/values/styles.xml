<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="coordinatorLayoutStyle">@style/Widget.Support.CoordinatorLayout</item>
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="PrimaryButton" parent="Theme.AppCompat">
        <item name="colorButtonNormal">@color/colorPrimary</item>
        <item name="colorControlHighlight">@color/colorPrimaryDark</item>
        <item name="android:layout_width">50sp</item>
        <item name="android:layout_height">150sp</item>
    </style>

    <style name="frontStyle" parent="Theme.AppCompat">
        <item name="android:textColor">#000000</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="frontStyleCal" parent="Theme.AppCompat">
        <item name="android:textColor">#000000</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="frontStyleTotal" parent="Theme.AppCompat">
        <item name="android:textColor">#000000</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="now_playing" parent="AppTheme">
        <item name="android:tint">#000000</item>
        <item name="android:layout_width">50sp</item>
        <item name="android:layout_height">50sp</item>
        <item name="android:layout_margin">10sp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="now_playing_text" parent="AppTheme">
        <item name="android:layout_marginLeft">10dip</item>
        <item name="android:layout_marginRight">10dip</item>
        <item name="android:layout_marginTop">10dip</item>
    </style>

    <style name="progressBar" parent="AppTheme">
        <item name="android:minHeight">256sp</item>
        <item name="android:minWidth">256sp</item>
    </style>


    <style name="PrimaryFlatButton" parent="Theme.AppCompat.Light">
        <item name="android:buttonStyle">@style/Widget.AppCompat.Button.Borderless.Colored</item>
        <item name="android:layout_width">50sp</item>
        <item name="android:layout_height">50sp</item>
        <item name="android:layout_margin">10sp</item>
        <item name="android:tint">#000000</item>
        <item name="android:background">#FFFFFF</item>
        <item name="android:layout_weight">1</item>
    </style>

</resources>
