<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="coordinatorLayoutStyle">@style/Widget.Support.CoordinatorLayout</item>
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="PrimaryButton" parent="Theme.AppCompat">
        <item name="colorButtonNormal">@color/colorPrimary</item>
    </style>

    <style name="now_playing" parent="AppTheme">
        <item name="android:layout_width">60sp</item>
        <item name="android:layout_height">60sp</item>
        <item name="android:layout_margin">10sp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="now_playing_text" parent="AppTheme">
        <item name="android:layout_marginLeft">10dip</item>
        <item name="android:layout_marginRight">10dip</item>
        <item name="android:layout_marginTop">10dip</item>
    </style>

    <style name="progressBar" parent="AppTheme">
        <item name="android:minHeight">206sp</item>
        <item name="android:minWidth">206sp</item>
    </style>

</resources>
